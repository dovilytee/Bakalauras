{% extends('base.html.twig') %}
{% block body %}
    <section style="background-color: #eee;">
        <div class="container py-5">

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://devshift.biz/wp-content/uploads/2017/04/profile-icon-png-898-450x450.png" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">{{ app.user.getUserIdentifier }}</h5>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="/notifications/chat" class="notification">
                                    <i class="fas fa-envelope"></i><span class="counter counter-lg">Pranešimai</span>
                                </a>
                                {#  <button type="button" class="btn btn-outline-primary ms-1">Pranešimai</button> #}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Vardas Pavarde</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.getLastname }} {{ app.user.getFirstname }} </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Elektronis pastas</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.getUserIdentifier }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Telefono numeris</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.getMobile }}</p>
                                </div>
                            </div>
                            <hr>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Adresas</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ app.user.getCity }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <a href="/notifications/chat" class="notification">
                        <i class="fas fa-envelope"></i><span class="counter counter-lg">Redaguoti</span>
                    </a>
                    <a href="/notifications/chat" class="notification">
                        <i class="fas fa-envelope"></i><span class="counter counter-lg">Ištrinti profilį</span>
                    </a>
                </div>
            </div>
        </div>
    </section>
    {% include 'footer.html.twig' %}
{% endblock %}